{
  "name": "unreal-engine-python",
  "displayName": "Unreal Engine Python",
  "description": "Tools to assist when writing Python for Unreal Engine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "keywords": [
    "python",
    "unreal",
    "engine",
    "game",
    "epic games"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Unreal Python",
        "title": "Execute",
        "command": "unreal-engine-python.execute"
      }
    ],
    "keybindings": [
      {
        "command": "unreal-engine-python.execute",
        "key": "ctrl+enter"
      }
    ],
    "configuration": {
      "unreal-engine-python.execute.showOutput": {
        "type": "boolean",
        "default": true,
        "description": "Display the output log when something is executed",
        "scope": "resource"
      },
      "unreal-engine-python.execute.clearOutput": {
        "type": "boolean",
        "default": false,
        "description": "Clear output log each time somethings new is executed.",
        "scope": "resource"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/uuid": "^8.3.4",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  }
}
